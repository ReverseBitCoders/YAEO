= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .fields
    = f.label :name
    = f.text_field :name
  .fields
    = f.label :description
    = f.text_area :description
  .fields
    = f.label :date
    = f.text_field :date
    = f.label :time
    = f.text_field :time
  .actions
    = f.submit 'Save'
