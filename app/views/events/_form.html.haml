= form_for @event do |f|
  .form_outer_box
    - if @event.errors.any?
      #error_explanation
        %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
        %ul
          - @event.errors.full_messages.each do |msg|
            %li= msg
    .fields
      = f.text_field :name
    .fields
      = f.text_area :description
    .fields
      = f.text_field :date
      = f.text_field :time
    .actions
      = f.submit 'Save'
