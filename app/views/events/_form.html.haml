= form_for @event do |f|
  .form_outer_box
    - if @event.errors.any?
      #error_explanation
        %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
        %ul
          - @event.errors.full_messages.each do |msg|
            %li= msg
    %table{:cellpadding => '10'}
      %tr
        %td{:align => 'right'}
          = f.label :name
        %td
          = f.text_field :name
      %tr
        %td{:align => 'right'}
          = f.label :description
        %td
          = f.text_area :description
      %tr
        %td{:align => 'right'}
          = f.label :date
        %td
          = f.text_field :date, :value => '', :readonly => true
          = f.text_field :time, :value => '', :readonly => true
    .actions
      = f.submit 'Save'
 
