= 'Top events this week:'
%br
- @events.each do |event|
  .event_list_div
    .event_info_box
      = event.name.humanize
      %p
        = event.description
      = link_to 'view event', event_path(event)
      |
      = link_to 'share on facebook'
      |
      = link_to 'tweet this event'
    .event_image_box
      = image_tag('rails.png')

