- if user_signed_in?
  = link_to t(:add_new_event), new_event_path
- @events.each do |event|
  .event_list_div
    .event_info_box
      = link_to event.name.humanize, event_path(event), :class => 'event_list_event_title'
      %br
      %br
        = event.description
      %br
      = link_to t(:facebook_share)
      |
      = link_to t(:twitter_share)
    .event_image_box
      = image_tag 'rails.png', :class => 'event_list_image'

