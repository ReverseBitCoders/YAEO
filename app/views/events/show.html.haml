%p#notice= notice
.event_main_image{:style => "max-height: 50%;"}
  = image_tag 'blank.png', :class => :event_show_image
.event_main_info_box
  %h3
    = @event.name.capitalize
  = @event.description
  %br
  %br
  - if not @event.date_time.nil?
    = @event.date_time.strftime("%d %B, %Y at %I:%M %p")
  %br
  %br

  - if can? :update, @event
    = link_to 'Edit', edit_event_path(@event)
    \|
  = link_to 'Back', events_path
